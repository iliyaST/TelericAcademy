<!-- END NAV -->
<div class="container">
    <div class="columns">
        <div class="column is-3">
            <aside class="menu">
                <p class="menu-label">
                    General
                </p>
                <p class="menu-label">
                    Administration
                </p>
                <ul class="menu-list">
                    @*<li><a></a></li>*@
                </ul>
            </aside>
        </div>
        <div class="column is-9">
            <nav class="breadcrumb" aria-label="breadcrumbs">
                <ul>
                    <li><a>EventsSite</a></li>
                    <li><a>Administration</a></li>
                    <li class="is-active"><a href="#" aria-current="page">Groups&Messages</a></li>
                </ul>
            </nav>
            <section class="hero is-info welcome is-small">
                <div class="hero-body">
                    <div class="container">
                        <h2 class="subtitle">
                            Here you can view all groups and messages and their details!
                        </h2>
                    </div>
                </div>
            </section>
            <div class="columns">
                <div class="column is-6">
                    <div class="card events-card">
                        <header class="card-header">
                            <p class="card-header-title">
                                Groups&Messages
                            </p>
                            <a href="#" class="card-header-icon" aria-label="more options">
                                <span class="icon">
                                    <i class="fa fa-angle-down" aria-hidden="true"></i>
                                </span>
                            </a>
                        </header>
                        <div class="group">
                            @foreach (var group in Model)
                            {
                                <table class="table is-fullwidth is-striped">
                                    <tbody>
                                        <tr>
                                            <td width="5%"><i class="fa fa-bell-o"></i></td>
                                            <td class="name-group-admin">
                                                @group.Name
                                                <span class="close">
                                                    X
                                                </span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                                foreach (var message in group.Messages)
                                {
                                    <div class="message-bubble">
                                        <span class="author">@message.Author: </span>@message.Content
                                        <span class="close">
                                            X
                                        </span>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
