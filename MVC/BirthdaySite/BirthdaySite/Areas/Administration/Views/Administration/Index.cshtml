@model BirthdaySite.ViewModels.AdminViewModel.AdminDataInitalViewModel
@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { id = "home-nav" })
<nav class="navbar is-white">
    <div class="container">
        <div class="navbar-brand">
            <div class="navbar-burger burger" data-target="navMenu">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
        <div id="navMenu" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item">
                    @Html.ActionLink("Groups&Messages", "GetAllGroupsAndMessages", "Administration")
                </a>
                <a class="navbar-item">
                    @Html.ActionLink("FriendLists&Friends", "GetAllFriendListsAndFriends", "Administration")
                </a>
                <a class="navbar-item">
                    @Html.ActionLink("Users", "GetAllUsers", "Administration")
                </a>
            </div>

        </div>
    </div>
</nav>
<!-- END NAV -->
<div class="container">
    <div class="columns">
        <div class="column is-3">
            <aside class="menu">
                <p class="menu-label">
                    General
                </p>
                <p class="menu-label">
                    Administration
                </p>
                <p class="menu-label">
                    Transactions
                </p>
                <ul class="menu-list">
                    @*<li><a></a></li>*@
                </ul>
            </aside>
        </div>
        <div class="column is-9">
            <nav class="breadcrumb" aria-label="breadcrumbs">
                <ul>
                    <li><a>EventsSite</a></li>
                    <li><a>Administration</a></li>
                    <li class="is-active"><a href="#" aria-current="page">Admin</a></li>
                </ul>
            </nav>
            <section class="hero is-info welcome is-small">
                <div class="hero-body">
                    <div class="container">
                        <h1 class="title">
                            Hello, Admin.
                        </h1>
                        <h2 class="subtitle">
                            I hope you are having a great day!
                        </h2>
                    </div>
                </div>
            </section>
            <section class="info-tiles">
                <div class="tile is-ancestor has-text-centered">
                    <div class="tile is-parent">
                        <article class="tile is-child box">
                            <p class="title">@Model.UsersCount</p>
                            <p class="subtitle">Users</p>
                        </article>
                    </div>
                    <div class="tile is-parent">
                        <article class="tile is-child box">
                            <p class="title">@Model.GroupsCount</p>
                            <p class="subtitle">Groups</p>
                        </article>
                    </div>
                    <div class="tile is-parent">
                        <article class="tile is-child box">
                            <p class="title">@Model.MessagesCount</p>
                            <p class="subtitle">Messages</p>
                        </article>
                    </div>
                    <div class="tile is-parent">
                        <article class="tile is-child box">
                            <p class="title">@Model.FriendsCount</p>
                            <p class="subtitle">Friends</p>
                        </article>
                    </div>
                    <div class="tile is-parent">
                        <article class="tile is-child box">
                            <p class="title">@Model.FriendListsCount</p>
                            <p class="subtitle">FriendsLists</p>
                        </article>
                    </div>
                </div>
            </section>          
        </div>
    </div>
</div>



